 	assigned-clock-parents = <&clk IMX8MQ_CLK_25M>;
 	cts-gpios = <&gpio5 27 GPIO_ACTIVE_LOW>;
 	rts-gpios = <&gpio5 26 GPIO_ACTIVE_LOW>;
